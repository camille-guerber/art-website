{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-12 offset-lg-2 offset-md-2">
            <h1>g√©rer les hashtags</h1>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#ID</th>
                    <th scope="col">Nom</th>
                    <th colspan="2" scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for hashtag in hashtags %}
                    <tr>
                        <th scope="row">{{ hashtag.id }}</th>
                        <th scope="row">{{ hashtag.nom }}</th>
                        <td scope="row">
                            <a href="{{ path('admin_hashtag_edit', { 'id': hashtag.id }) }}">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td scope="row">
                            <a href="{{ path('admin_hashtag_remove', { 'id': hashtag.id }) }}">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}